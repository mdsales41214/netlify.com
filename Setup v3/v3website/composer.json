{
    "name": "yourcompany/website",
    "description": "YourCompany BV Professional PHP Website",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0",
        "vlucas/phpdotenv": "^5.6",
        "guzzlehttp/guzzle": "^7.8",
        "phpmailer/phpmailer": "^6.9",
        "htmlpurifier/htmlpurifier": "^4.17",
        "monolog/monolog": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "includes/"
        },
        "files": [
            "includes/functions.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
